{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/Los_Angeles",
  "extends": [
    "config:best-practices",
    "schedule:automergeWeekly",
    ":automergeBranch",
    ":automergeMinor",
    ":automergeDigest",
    ":preserveSemverRanges"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true
    }
  ]
}
